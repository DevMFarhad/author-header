{
  "name": "author-header",
  "displayName": "Author header",
  "description": "Insert professional author header comments in any language",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Formatters", "Snippets"
  ],
  "keywords": ["author", "copyright", "author header", "author comments"],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "license": "MIT",
  "changelog": "./CHANGELOG.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevMFarhad/author-header"
  },
  "contributes": {
    "configuration": {
      "title": "Author Header",
      "properties": {
        "authorHeader.name": {
          "type": "string",
          "default": "Your Name",
          "description": "Author's full name"
        },
        "authorHeader.email": {
          "type": "string",
          "default": "your.email@example.com",
          "description": "Author's email address"
        },
        "authorHeader.organization": {
          "type": "string",
          "default": "Your Organization",
          "description": "Company or organization name"
        }
      }
    },
    "commands": [
      {
        "command": "authorHeader.insertMultiline",
        "title": "Insert Author Header (Multiline)"
      }
    ],
    "keybindings": [
      {
        "command": "authorHeader.insertMultiline",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}